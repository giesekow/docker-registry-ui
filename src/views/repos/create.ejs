<%- include('../head', { title: 'Add New Registry' }) -%>
  <div class="w3-row">
    <div class="w3-display-container" style="height: 100vh; width: 100vw;">
      <div class="w3-container w3-display-middle w3-center w3-card" style="width: 450px;">
        <h3>Add Registry</h3>
        <span class="w3-text-red"><%- locals.message %></span>
        <form class="w3-container" method="post" action="/registries/create">
          <label class="w3-text-blue"><b>Name</b></label>
          <input class="w3-input w3-border w3-margin-bottom" name="name" type="text">

          <label class="w3-text-blue"><b>Base URL</b></label>
          <input class="w3-input w3-border w3-margin-bottom" name="baseURL" type="text">

          <label class="w3-text-blue"><b>Requires Authentication ?</b></label>
          <input class="w3-input w3-border w3-margin-bottom" name="hasAuth" type="checkbox">

          <label class="w3-text-blue"><b>Username</b></label>
          <input class="w3-input w3-border w3-margin-bottom" name="username" type="text">

          <label class="w3-text-blue"><b>Password</b></label>
          <input class="w3-input w3-border w3-margin-bottom" name="password" type="password">

          <input class="w3-btn w3-blue w3-margin-bottom" type="submit" value="Add">
        </form>
      </div>
    </div>
    <%- include('../foot') -%>