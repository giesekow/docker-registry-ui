<%- include('../head', { title: 'Edit Registry' }) -%>
  <div class="w3-row">
    <div class="w3-display-container" style="height: 100vh; width: 100vw;">
      <div class="w3-container w3-display-middle w3-center w3-card" style="width: 450px;">
        <h3>Edit Registry Entry</h3>
        <span class="w3-text-red"><%- locals.message %></span>
        <form class="w3-container" method="post" action="/registries/edit/<%= registry._id %>">
          <label class="w3-text-blue"><b>Name</b></label>
          <input class="w3-input w3-border w3-margin-bottom" name="name" type="text" value="<%= registry.name %>">

          <label class="w3-text-blue"><b>Base URL</b></label>
          <input class="w3-input w3-border w3-margin-bottom" name="baseURL" type="text" value="<%= registry.baseURL %>">

          <label class="w3-text-blue"><b>Show Empty Repos ?</b></label>
          <% if (registry.showEmpty) {%>
            <input class="w3-input w3-border w3-margin-bottom" name="showEmpty" type="checkbox" checked>
            <%} else { %>
              <input class="w3-input w3-border w3-margin-bottom" name="showEmpty" type="checkbox">
              <%} %>

                <label class="w3-text-blue"><b>Requires Authentication ?</b></label>
                <% if (registry.hasAuth) {%>
                  <input class="w3-input w3-border w3-margin-bottom" name="hasAuth" type="checkbox" checked>
                  <%} else { %>
                    <input class="w3-input w3-border w3-margin-bottom" name="hasAuth" type="checkbox">
                    <%} %>
                      <label class="w3-text-blue"><b>Username</b></label>
                      <input class="w3-input w3-border w3-margin-bottom" name="username" type="text">

                      <label class="w3-text-blue"><b>Password</b></label>
                      <input class="w3-input w3-border w3-margin-bottom" name="password" type="password">

                      <input class="w3-btn w3-blue w3-margin-bottom" type="submit" value="Save">
        </form>
        <a class="w3-btn w3-black w3-margin-top w3-margin-bottom" href="/registries">Cancel</a>
      </div>
    </div>
    <%- include('../foot') -%>